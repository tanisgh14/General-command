//EXP 1b-To make a calculautor
#include<iostream>
using namespace std;
int main()
{
    //intialise the variable
    float a, b;
    float sum,sub,mul,div;
    //taking user input
    cout<<"1st number -";
    cin>>a;
    cout<<"2nd number -";
    cin>>b;
    //apply operation 1
    sum = a+b;
    //display output 1
    cout<<"sum  = "<<sum<<endl;
    //apply operation 2
    sub=a-b;
    //display output 2
    cout<<"sub ="<<sub<<endl;
    //apply operation 3
    mul=a*b;
    //display output 3
    cout<<"mul ="<<mul<<endl;
    //apply operation 4
    div=a/b;
    //display output 4
    cout<<"div="<<div<<endl;



    return 0;


}


/*Output
1st number -20
2nd number -5
sum  = 25
sub =15
mul =100
div=4
*/

